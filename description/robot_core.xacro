<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>

    <material name="orange">
        <color rgba="1.0 0.3 0.1 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1.0 1.0"/>
    </material>
    
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    
    <!-- BASE LINK -->

    <link name="base_link">
        
    </link>

    <!-- CHASSIS LINK -->
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.17 0.0 0.0255"/>
        
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.2 0.0 0.0225"/>
            <geometry>
                <box size="0.4 0.2 0.045"/>
                <material name="orange"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.2 0.0 0.0225"/>
            <geometry>
                <box size="0.4 0.2 0.045"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT MOTOR LINK -->

    <joint name="left_motor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_motor"/>
        <origin xyz="0.0 0.07 0.0" rpy="${-pi/2} 0.0 0.0"/>
    </joint>

    <link name="left_motor">
        <visual>
            <geometry>
                <cylinder radius="0.0255" length="0.06"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0255" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT MOTOR SHAFT LINK -->

    <joint name="left_shaft_joint" type="fixed">
        <parent link="left_motor"/>
        <child link="left_shaft"/>
        <origin xyz="0.0 0.0 0.038"/>
    </joint>

    <link name="left_shaft">
        <visual>
            <geometry>
                <cylinder radius="0.005" length="0.016"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.005" length="0.016"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.1385 0.0" rpy="${-pi/2} 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0525" length="0.045"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0525" length="0.045"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT MOTOR LINK -->

    <joint name="right_motor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_motor"/>
        <origin xyz="0.0 -0.07 0.0" rpy="${pi/2} 0.0 0.0"/>
    </joint>

    <link name="right_motor">
        <visual>
            <geometry>
                <cylinder radius="0.0255" length="0.06"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0255" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT MOTOR SHAFT LINK -->

    <joint name="right_shaft_joint" type="fixed">
        <parent link="right_motor"/>
        <child link="right_shaft"/>
        <origin xyz="0.0 0.0 0.038"/>
    </joint>

    <link name="right_shaft">
        <visual>
            <geometry>
                <cylinder radius="0.005" length="0.016"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.005" length="0.016"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.1385 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0525" length="0.045"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0525" length="0.045"/>
            </geometry>
        </collision>
    </link>


    <!-- CASTER WHEEL LINK -->

    <joint name="cws_1_joint" type="fixed">
        <parent link="chassis"/>
        <child link="cws_1"/>
        <origin xyz="0.39 0.0 -0.029" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="cws_1">
        <visual>
            <geometry>
                <box size="0.02 0.068 0.058"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.068 0.058"/>
            </geometry>
        </collision>
    </link>

    <joint name="cws_2_joint" type="fixed">
        <parent link="cws_1"/>
        <child link="cws_2"/>
        <origin xyz="0.065 0.0 -0.01" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="cws_2">
        <visual>
            <geometry>
                <box size="0.11 0.068 0.038"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.11 0.068 0.038"/>
            </geometry>
        </collision>
    </link>

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="cws_2"/>
        <child link="caster_wheel"/>
        <origin xyz="0.0 0.0 -0.019" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
    </link>

</robot>